pipeline {
    agent {
        docker {
            image 'androidsdk/android-29'
        }
    }
    stages {
        stage('Build') {
            steps {
                echo 'Running build'
                sh 'sudo chown $USER:$USER $ANDROID_HOME -R'
                sh 'chmod +wx gradlew && ./gradlew --no-daemon --stacktrace clean'
                sh ' echo no | avdmanager create avd -n first_avd --abi google_apis/x86_64 -k "system-images;android-29;google_apis;x86_64"'
                sh 'emulator -avd first_avd -no-window -no-audio &'
                sh 'adb devices'
                sh 'yes | sdkmanager --licenses'
                sh 'sdkmanager --install "build-tools;29.0.2"'
            }
        }
        stage('Test') {
            steps {
                echo 'Running Test'
                sh "./gradlew test"
            }
            post {
                always {
                    echo 'Running post-test'
                }
            }
        }
        stage('Deliver') {
            steps {
                echo 'Running Deliver'
            }
        }
    }
}