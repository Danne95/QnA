pipeline {
    agent {
        docker {
            image 'androidsdk/android-29'
        }
    }
    stages {
        stage('Build') {
            steps {
                echo 'Running build'
                sh 'chmod +x gradlew && ./gradlew --no-daemon --stacktrace clean'
            }
        }
        stage('Test') {
            steps {
                echo 'Running Test'
                sh 'echo no | avdmanager create avd -n test -k "system-images;android-29;google_apis;x86_64"'
                sh '$ adb shell am instrument -w androidTest/PermissionsUT'
            }
            post {
                always {
                    echo 'Running post-test'
                }
            }
        }
        stage('Deliver') {
            steps {
                echo 'Running Deliver'
            }
        }
    }
}